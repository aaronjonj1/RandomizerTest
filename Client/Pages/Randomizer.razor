@page "/randomizer"

<h1>Randomizer</h1>

<p>Input prompt </p>

<input @bind="InputString " />

<input @bind="InputString2 " />

<button class="btn btn-primary" @onclick="DoProcessing">Do it</button>

<p>Output: @OutputString </p>

@code

{

    private string InputString { get; set; }

    private string InputString2 { get; set; }

    private string OutputString { get; set; }

    private void DoProcessing()

    {

        int questions = int.Parse(InputString);
        int number = int.Parse(InputString2);
        int final = 0;

        for (int i = 1; i <= questions; i++)
        {
            Random rd = new Random();
            int rand_num = rd.Next(1, 100);

            if (number >= rand_num)
            {
                final = final + 1;
            }
            else
            {
                final = final;
            }
        }

        OutputString = final.ToString();

    }

}